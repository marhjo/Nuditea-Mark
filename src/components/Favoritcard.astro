---
import { Image } from "astro:assets";

import BubbleTea1 from "../assets/imgs/bubble_tea1.png";
import BubbleTea2 from "../assets/imgs/bubble_tea2.png";
import BubbleTea3 from "../assets/imgs/bubble_tea3.png";
import BubbleTea4 from "../assets/imgs/bubble_tea4.png";
---

<!--- ui card starter -->
<section class="container">
  <div class="fav_card">
    <div class="img">
      <Image src={BubbleTea1} alt="bubble tea 1" />
      <h3>Skumbanan</h3>
    </div>
    <div class="img">
      <Image src={BubbleTea2} alt="bubble tea 2" />
      <h3>Watermelon Sugar High</h3>
    </div>
    <div class="img">
      <Image src={BubbleTea3} alt="bubble tea 3" />
      <h3>Grapefruit Greatfruit</h3>
    </div>
    <div class="img">
      <Image src={BubbleTea4} alt="bubble tea 4" />
      <h3>Marcipangris</h3>
    </div>
    <div class="img">
      <Image src={BubbleTea1} alt="bubble tea 1" />
      <h3>Æblerov</h3>
    </div>
    <div class="img">
      <Image src={BubbleTea2} alt="bubble tea 2" />
      <h3>Bær Med Bær</h3>
    </div>
    <div class="img">
      <Image src={BubbleTea3} alt="bubble tea 3" />
      <h3>Bounty</h3>
    </div>
  </div>
</section>

<!--- ui card slutter -->

<!-- Styles starter -->

<style>
  .container .fav_card {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 1.5rem;
    justify-content: center;
    text-align: center;
    margin-left: 15%;
    margin-right: 15%;
  }

  h3 {
    font-family: var(--font-main);
    color: var(--colour-titletext);
    font-size: medium;
  }

  @media (max-width: 930px) {
    .container .fav_card {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      justify-content: center;
      text-align: center;
    }
    h3 {
      font-family: var(--font-main);
      color: var(--colour-titletext);
    }
  }

  @media (max-width: 750px) {
    .container .fav_card {
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-content: center;
      text-align: center;
    }
    h3 {
      font-family: var(--font-main);
      color: var(--colour-titletext);
    }
  }

  @media (max-width: 450px) {
    .container .fav_card {
      display: grid;
      grid-template-columns: 1fr;
      justify-content: center;
      text-align: center;
    }
    h3 {
      font-family: var(--font-main);
      color: var(--colour-titletext);
    }
  }
</style>

<!-- Styles sslutter -->
