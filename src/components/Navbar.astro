---
import Logo from "../assets/svgs/nuditealogo.svg";
---

<div class="nav_menu">
  <a href="/" aria-label="Logo Button">
    <img src={Logo.src} alt="Logo" class="logo" />
  </a>
  <div class="nav-buttons">
    <a href="/" aria-label="Front Page" class="nav-button">Forside</a>
    <a href="/menu" aria-label="Menu Page" class="nav-button">Menu</a>
    <a href="/about" aria-label="About Page" class="nav-button">Om os</a>
  </div>
</div>

<style>
  .nav_menu {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: transparent;
    padding: 1.25rem;
  }

  .logo {
    margin-bottom: 1.25rem;
    cursor: pointer;
    width: 20rem;
    height: auto;
  }

  .nav-button {
    display: inline-block;
    margin: 0 2.625rem;
    padding-bottom: 0.375rem;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
    border-bottom: 2px solid var(--colour-gold);
  }

  .nav-button:hover {
    transform: scale(1.05);
    color: var(--colour-gold);
  }
  @media (max-width: 770px) {
    .logo {
      margin-top: 1.5rem;
    }
    .nav_menu {
      padding: 0;
    }
    .nav-buttons {
      position: fixed;
      left: -100%;
      display: grid;
      grid-template-rows: repeat(3, 1fr);
      justify-items: center;
      align-items: center;
      background-color: var(--colour-red);
      width: 100%;
      height: 100vh;
      z-index: 1;
      text-align: center;
      transition: 0.3s;
      padding-bottom: 20rem;
    }

    .nav-buttons.active {
      left: 0;
    }
    .nav-button {
      display: inline-block;
      margin: 0 0.625rem;
      padding: 1rem;
      width: fit-content;
      height: fit-content;
      border-bottom: 2px solid transparent;
      transition: all 0.3s ease;
      border-bottom: 2px solid var(--colour-gold);
    }
  }
</style>
